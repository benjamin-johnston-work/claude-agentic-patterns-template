{
    "Logging":  {
                    "LogLevel":  {
                                     "Default":  "Debug",
                                     "Microsoft.AspNetCore":  "Warning",
                                     "HotChocolate":  "Debug",
                                     "HotChocolate.Execution":  "Debug",
                                     "HotChocolate.Types":  "Debug",
                                     "Archie":  "Debug"
                                 }
                },
    "AllowedHosts":  "*",
    "Git":  {
                "UserAgent":  "Archie-Documentation-Platform/1.0",
                "EnableDetailedLogging":  true
            },
    "GitHub":  {
                   "DefaultAccessToken":  "your-github-token-here",
                   "ApiTimeoutSeconds":  30,
                   "RateLimitBuffer":  100,
                   "EnableRateLimitProtection":  true,
                   "UserAgent":  "ArchieDocumentationPlatform",
                   "MaxTreeDepthForRecursion":  10
               },
    "AzureSearch": {
        "ServiceName": "ract-archie-search-dev",
        "ServiceUrl": "https://ract-archie-search-dev.search.windows.net",
        "AdminKey": "your-azure-search-admin-key-here",
        "QueryKey": "your-azure-search-query-key-here",
        "IndexName": "archie-repository-documents-v1",
        "RequestTimeoutSeconds": 120,
        "MaxBatchSize": 50,
        "RetryAttempts": 3,
        "EnableDetailedLogging": true
    },
    "AzureOpenAI": {
        "Endpoint": "https://ract-ai-foundry-dev.openai.azure.com/",
        "ApiKey": "your-azure-openai-api-key-here",
        "EmbeddingDeploymentName": "text-embedding-3-large",
        "ApiVersion": "2024-02-01",
        "MaxBatchSize": 32,
        "RequestTimeoutSeconds": 60,
        "RetryAttempts": 3,
        "EnableRateLimitProtection": true
    },
    "Indexing": {
        "MaxConcurrentIndexingOperations": 3,
        "MaxFileContentLength": 16384,
        "IndexableFileExtensions": [ ".cs", ".js", ".ts", ".py", ".java", ".cpp", ".c", ".go", ".rs", ".php", ".rb", ".swift", ".kt", ".scala", ".html", ".css", ".sql", ".md", ".txt", ".json", ".xml", ".yml", ".yaml", ".sh", ".ps1" ],
        "IgnoredDirectories": [ ".git", ".vs", ".vscode", "node_modules", "bin", "obj", "packages", ".nuget", "target", "build" ],
        "IndexRefreshIntervalSeconds": 3600,
        "ExtractCodeSymbols": true,
        "EnableIncrementalIndexing": true
    },
    "DocumentationGeneration": {
        "AzureOpenAIEndpoint": "https://ract-ai-foundry-dev.openai.azure.com/",
        "AzureOpenAIApiKey": "your-azure-openai-api-key-here",
        "GPTDeploymentName": "gpt-4.1",
        "APIVersion": "2024-02-01",
        "MaxTokensPerSection": 4000,
        "Temperature": 0.3,
        "MaxConcurrentGenerations": 3,
        "RequestTimeoutSeconds": 120,
        "RetryAttempts": 3,
        "EnableCodeExtraction": true,
        "EnableDependencyAnalysis": true,
        "EnableArchitecturalAnalysis": true,
        "EnableQualityValidation": true,
        "MaxTokensPerDay": 1000000,
        "EnableTokenUsageTracking": true,
        "MaxContentLength": 50000,
        "MinContentLength": 100,
        "MinQualityScore": 0.7,
        "EnableRateLimitProtection": true,
        "RequestsPerMinute": 20
    },
    "KnowledgeGraph": {
        "MaxConcurrentAnalysis": 3,
        "MaxEntitiesPerRepository": 25000,
        "BatchSizeForEntityProcessing": 50,
        "MaxRelationshipDepth": 2,
        "MinimumRelationshipConfidence": 0.5,
        "MinimumPatternConfidence": 0.6,
        "EnablePatternDetection": true,
        "EnableCrossRepositoryAnalysis": false,
        "EnableComplexityAnalysis": true,
        "SupportedLanguages": [ "csharp", "javascript", "typescript", "python", "java" ],
        "GraphRefreshIntervalSeconds": 3600,
        "EnableIncrementalUpdates": true,
        "MaxAnalysisRetries": 2,
        "AnalysisTimeoutMilliseconds": 5000
    },
    "CodeAnalysis": {
        "AzureOpenAIEndpoint": "https://ract-ai-foundry-dev.openai.azure.com/",
        "AzureOpenAIApiKey": "your-azure-openai-api-key-here",
        "GPTDeploymentName": "gpt-4.1",
        "EmbeddingDeploymentName": "text-embedding-3-large",
        "MaxTokensForAnalysis": 1500,
        "AnalysisTemperature": 0.1,
        "UseSemanticSimilarity": true,
        "EnablePatternRecognitionAI": true,
        "SemanticSimilarityThreshold": 0.7,
        "MaxAnalysisTokens": 800,
        "MaxConcurrentAnalysisCalls": 5,
        "AnalysisRequestTimeoutMs": 20000
    }
}
